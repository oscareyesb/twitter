<section id= "formato-tweet" class="container text-center mt-5">

<p style="color: green"><%= notice %></p>

<h1 class="text-center mt-5">Tweets</h1>




<div class= "row d-flex justify-content-center">
  <%= form_with url: tweets_path, method: :get do |form|%>
  <%= form.text_field :query_text, placeholder: ('Buscar Tweet'), value: params[:query_text]%>
<%end%>


<div id="tweets" class= "row d-flex justify-content-center">
  <% @tweets.each do |tweet| %>
    <%= render tweet %>
    <p>
      <%= link_to "Ver mas", tweet, class:"btn btn-primary" %>
    </p>
  <% end %>


  <p class="text-center">
    <%= link_to "Nuevo Tweet", new_tweet_path, class:"btn btn-primary mt-5" %>
  </p>

  <br><br>
  <p class="text-center">

  <%==raw pagy_bootstrap_nav(@pagy)%>
 
  <br><br>

  
</div>

</section>




